<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Secret" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Secret" parent="Base.Theme.Secret">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">@color/slate_500</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <style name="Theme.Secret.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Secret.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/elevated_black</item>
    </style>

    <style name="Theme.Secret.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>